<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SplashActivity">

    <TextView
        android:id="@+id/tv_together"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="같이"
        android:textColor="#000000"
        android:textSize="30sp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"/>

    <TextView
        android:id="@+id/tv_christmas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="크리스마스 캐롤"
        android:textColor="#000000"
        android:textStyle="bold"
        android:textSize="40sp"
        android:background="@drawable/round_rect"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/tv_together"
        android:layout_marginVertical="10dp"
        android:paddingHorizontal="20dp"
        android:paddingVertical="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="들으러 갈래?"
        android:textColor="#000000"
        android:textSize="30sp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/tv_christmas"/>

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/lottie_splash"
        android:layout_width="500dp"
        android:layout_height="700dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        app:lottie_rawRes="@raw/christmas_tree"
        app:lottie_loop="true"
        android:scaleType="centerCrop"
        app:lottie_autoPlay="true"/>

</RelativeLayout>