<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="16dp"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="특정 데이터를 가지고 여러가지 차트 그려보기"
        android:textColor="#000000"
        android:textSize="25sp"
        android:textStyle="bold"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="8dp"/>

    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/android"
        android:layout_gravity="center_horizontal"
        android:layout_margin="64dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2018-2학기 모바일프로그래밍 수강생 학번들의 학번"
        android:layout_marginBottom="8dp"
        android:textSize="20sp"
        android:layout_gravity="center_horizontal"
        android:textColor="#000000"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="17학번: 16명\n16학번: 9명\n15학번: 1명\n14학번: 2명"
        android:textColor="#000000"
        android:textSize="15sp"
        android:paddingVertical="10dp"
        android:paddingHorizontal="100dp"
        android:background="#f5f5f5"
        android:lineSpacingMultiplier="2"
        android:layout_margin="24dp"/>



    <TextView
        android:id="@+id/circle"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:text="원형 차트"
        android:gravity="center"
        android:background="#f0f4c3"
        android:layout_marginVertical="8dp"></TextView>
    <TextView
        android:id="@+id/curved_line"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:text="꺾은선형 차트"
        android:gravity="center"
        android:background="#dcedc8"
        android:layout_marginBottom="8dp"></TextView>
    <TextView
        android:id="@+id/vertical_bar"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:text="세로 막대형 차트"
        android:gravity="center"
        android:background="#f0f4c3"
        android:layout_marginBottom="8dp"></TextView>
    <TextView
        android:id="@+id/horizontal_bar"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:text="가로 막대형 차트"
        android:gravity="center"
        android:background="#dcedc8"></TextView>

</LinearLayout>